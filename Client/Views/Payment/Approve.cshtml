@{
    ViewData["Title"] = "My Ticket";
}

<!-- Page Title -->
<section class="page-title page-title-bottom bg-holder bg-overlay-black-50" style="background: url(../dist/images/bg/02.jpg);">
    <div class="container">
        <div class="row align-items-center position-relative">
            <div class="col-lg-6">
                <div class="d-flex align-items-center">
                    <img class="img-fluid rounded-circle avatar avatar-xll" src="~/dist/images/avatar/01.jpg" alt="">
                    <div class="ms-4">
                        <h3 class="text-white mb-2"> Alice Williams</h3>
                        <div class="d-flex">
                            <span class="d-inline-block text-white">The first thing to remember about success.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- My Profile -->
<section class="space-ptb bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="sidebar">
                    <partial name="~/Views/Shared/_Partials/_Sidebar.cshtml" />
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <h4 class="mb-4">Approve Payment List</h4>
                <div class="sidebar mb-0">
                    <div class="widget mb-0">
                        <div class="widget-title">
                            <h6> <i class="fas fa-file-invoice"></i> List Payment: </h6>
                        </div>
                        <div class="widget-content">
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th> Order ID </th>
                                            <th> Name</th>
                                            <th> Event Title</th>
                                            <th> Payment Date</th>
                                            <th> Total</th>
                                            <th> File </th>
                                            <th> Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="list_pending_payment">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/payments/approve.js"></script>
}
