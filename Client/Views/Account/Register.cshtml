@{
    ViewData["Title"] = "Register Account";
}

<!-- Page Title -->
<section class="page-title page-title-bottom bg-holder bg-overlay-black-50">
    <div class="container">
        <div class="row position-relative">
            <div class="col-lg-6">
                <h1 class="text-white">Create Account</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create Account</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Register -->
<section class="space-ptb">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="section-title text-center">
                    <h2>Welcome</h2>
                    <div class="sub-title"> <span>Create an account to get started</span></div>
                </div>
                <div class="border border-radius mt-4 p-sm-5 p-4">
                    <div id="error"></div>
                    <form class="row t-sm-4 mt-2 mb-5 align-items-center needs-validation" novalidate enctype="multipart/form-data" id="form">
                        <div class="mb-3 col-sm-12">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email" required="">
                            <div class="invalid-feedback">
                                Email is required field
                            </div>
                        </div>
                        <div class="mb-3 col-sm-6">
                            <input type="text" name="first_name" id="first_name" class="form-control" placeholder="First Name" required="">
                            <div class="invalid-feedback">
                                First Name is required field
                            </div>
                        </div>
                        <div class="mb-3 col-sm-6">
                            <input type="text" name="last_name" id="last_name" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="mb-3 col-sm-12">
                            <input type="text" name="phone_number" id="phone_number" class="form-control" placeholder="Phone Number" required="">
                            <div class="invalid-feedback">
                                Phone Number is required field
                            </div>
                        </div>
                        <div class="mb-3 col-sm-12">
                            <input type="Password" name="password" id="password" class="form-control" placeholder="Password" required="">
                            <div class="invalid-feedback">
                                Password is required field
                            </div>
                        </div>
                        <div class="mb-3 col-sm-12">
                            <input type="Password" name="password_confirmation" id="password_confirmation" class="form-control" placeholder="Confirm Password">
                        </div>
                        <div class="mb-3 col-sm-12 select-border">
                            <select class="form-select form-control basic-select-role" name="role" id="role" aria-label="Default select example" id="role" required="">
                            </select>
                            <div class="invalid-feedback">
                                Role is required field
                            </div>
                        </div>
                        <div class="organizer col-sm-12 border-top py-3">
                            <div class="mb-3 col-sm-12">
                                <input type="text" name="organizer_name" id="organizer_name" class="form-control d-none" placeholder="Organizer Name">
                                <div class="invalid-feedback">
                                    Organizer Name is required field
                                </div>
                            </div>
                            <div class="mb-3 col-sm-12">
                                <textarea name="organizer_description" id="organizer_description" class="form-control d-none" placeholder="Organizer Description"></textarea>
                                <div class="invalid-feedback">
                                    Organizer Description is required field
                                </div>
                            </div>
                            <div class="mb-3 col-sm-12">
                                <input type="file" name="organizer_image_file" class="form-control d-none" id="organizer_image_file">
                                <div class="invalid-feedback">
                                    Organizer Image File is required field
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 col-sm-12">
                            <small>By signing up, I agree to terms of service, privacy policy, and community guidelines</small>
                        </div>
                        <div class="col-sm-6 d-grid">
                            <button type="submit" class="btn btn-primary" id="submit-btn">Sign up</button>
                        </div>
                        <div class="col-sm-6">
                            <ul class="list-unstyled d-flex mb-1 mt-sm-0 mt-3">
                                <li class="me-1"><a class="text-dark" asp-area="" asp-controller="Account" asp-action="Login"><b>Already Registered User? Click here to login</b></a></li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/dist/js/select2/select2.full.js"></script>
	<script src="~/js/accounts/register.js"></script>
}
