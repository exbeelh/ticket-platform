@{
    ViewData["Title"] = "Events";
}

<!-- Page Title -->
<section class="page-title page-title-bottom bg-holder bg-overlay-black-50" style="background: url(../dist/images/bg/02.jpg);">
    <div class="container">
        <div class="row position-relative">
            <div class="col-lg-6">
                <h1 class="text-white">Event For You</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Event List</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Event List -->
<section class="space-ptb bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="sidebar">
                    <div class="widget">
                        <div class="widget-title">
                            <h6> <i class="fas fa-filter"></i>Filters </h6>
                        </div>
                        <div class="widget-content">
                            <div class="pb-3">
                                <a class="collapse-title" data-bs-toggle="collapse" href="#filters">
                                    Advanced Filters <i class="fas fa-minus-circle"></i>
                                </a>
                                <div class="collapse show" id="filters">
                                    <div class="form-group mb-3">
                                        <input type="text" class="form-control" name="searchQuery" placeholder="What are you looking for?" id="searchQuery">
                                    </div>
                                    <div class="form-group mb-3 select-border">
                                        <select class="form-control basic-select-category" id="category_id">
                                            <option value="">Select Category</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="pt-0">
                                <div class="form-group mb-0">
                                    <button type="button" class="btn btn-secondary d-block" id="button-filter">Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 mt-4 mt-md-0">
                <div class="row" id="event-list"></div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/dist/js/select2/select2.full.js"></script>
    <script src="~/js/events/index.js"></script>
}
