@{
    ViewData["Title"] = "Profile";
}

<!-- Page Title -->
<partial name="~/Views/Shared/_Partials/_HeroUser.cshtml" />

<!-- My Profile -->
<section class="space-ptb bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="sidebar">
                    <partial name="~/Views/Shared/_Partials/_Sidebar.cshtml" />
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <h4 class="mb-4">My Profile</h4>
                <div class="sidebar mb-0">
                    <form class="row">
                        <div class="widget">
                            <div class="widget-title">
                                <h6> <i class="fas fa-user"></i> Account Information: </h6>
                            </div>
                            <div class="widget-content">
                                <div class="row">
                                    <div class="form-group mb-3 col-md-12">
                                        <label class="form-label">Email</label>
                                        <input type="text" class="form-control" id="email" value="">
                                    </div>
                                    <div class="form-group mb-3 col-md-6">
                                        <label class="form-label">First name</label>
                                        <input type="text" class="form-control" id="first-name" value="">
                                    </div>
                                    <div class="form-group mb-3 col-md-6">
                                        <label class="form-label">Last name</label>
                                        <input type="text" class="form-control" id="last-name" value="">
                                    </div>
                                    <div class="form-group mb-3 col-md-6">
                                        <label class="form-label">Phone number</label>
                                        <input type="text" class="form-control" id="phone-number" value="">
                                    </div>
                                    <div class="form-group mb-3 col-md-6">
                                        <label class="form-label">Website <small>(eg : "http://www.event.com")</small></label>
                                        <input type="text" class="form-control" id="website" value="">
                                    </div>
                                    <div class="form-group mb-3 col-md-12">
                                        <label class="form-label">Profile Picture</label>
                                        <div class="input-group file-upload">
                                            <input type="file" class="form-control" id="profile-picture">
                                            <label class="input-group-text" for="profile-picture">Upload Image </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="widget mb-0">
                            <div class="widget-title">
                                <h6> <i class="fas fa-map"></i> Contact Address: </h6>
                            </div>
                            <div class="widget-content">
                                <div class="form-group mb-3 col-md-12">
                                    <label class="form-label">Address </label>
                                    <textarea class="form-control" rows="4"></textarea>
                                </div>
                                <div class="form-group mb-3 col-md-6">
                                    <label class="form-label">City </label>
                                    <input type="text" class="form-control" id="city" placeholder="City">
                                </div>
                                <div class="form-group mb-3 col-md-6">
                                    <label class="form-label">Postal Code </label>
                                    <input type="text" class="form-control" id="postal-code" placeholder="Postal Code">
                                </div>
                                <div class="form-group mb-3 col-md-6 select-border">
                                    <label class="form-label">Country</label>
                                    <select class="form-control basic-select">
                                        <option value="value 01" selected="selected">Select Country</option>
                                        <option value="IDN">Indonesia</option>
                                        <option value="MAL">Malaysia</option>
                                        <option value="USA">United States</option>
                                    </select>
                                </div>
                                <div class="form-group mb-3 col-md-6">
                                    <label class="form-label">State </label>
                                    <input type="text" class="form-control" id="state" placeholder="State">
                                </div>
                                <div class="mb-3 col-12 form-group">
                                    <button type="submit" class="btn btn-secondary" id="submit-btn">Save</button>
                                </div>
                            </div>
                        </div>
                    </form>              
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/dist/js/select2/select2.full.js"></script>
    <script src="~/dist/js/dropzone/dropzone.js"></script>
    <script src="~/js/users/profile.js"></script>
}
