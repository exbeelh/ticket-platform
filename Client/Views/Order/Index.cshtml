@{
    ViewData["Title"] = "Order Tickets";
}

<!-- Page Title -->
<section class="page-title page-title-bottom bg-holder bg-overlay-black-50">
    <div class="container">
        <div class="row position-relative">
            <div class="col-lg-12">
                <h1 class="text-white" id="order_id">ORDER ID - #8860IK01PO</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Order Ticket Detail</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Invoice -->
<section class="space-ptb">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="section-title">
                    <h2>Order For <a href="" class="text-primary" id="event_url"></a></h2>
                    <div class="sub-title">
                        <span>
                            Thank you for your order. Your order has been placed and is currently being processed. When your order ships we will send you a confirmation email with delivery details.
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-8 col-sm-8">
                        <h6>Order Detail:</h6>
                        <span id="order_detail_id"></span>
                    </div>
                    <div class="col-md-4 col-sm-4 mt-sm-0 mt-4">
                        <h6>Event Detail:</h6>
                        <span id="event_detail"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="table-responsive">
                    <table class="table table-borderless shadow-sm mt-5 mb-0">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ticket Name</th>
                                <th scope="col">Ticket Price</th>
                                <th scope="col">Ticket Qty</th>
                                <th scope="col">Ticket Sub Total</th>
                            </tr>
                        </thead>
                        <tbody id="ticket_details">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-8">
                        <button class="btn btn-secondary" id="print_ticket"><i class="fas fa-print"></i> Print Ticket</button>
                    </div>
                    <div class="col-md-4 mt-4 mt-md-0">
                        <div class="d-flex bg-dark p-3 mt-0">
                            <h6 class="pe-4 mb-0 text-white">Order Total:</h6><span class="text-white ms-auto" id="order_total"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/orders/index.js"></script>
}
