@{
    ViewData["Title"] = "Manage Organizer";
}

<!-- Page Title -->
<section class="page-title page-title-bottom bg-holder bg-overlay-black-50" style="background: url(../dist/images/bg/02.jpg);">
    <div class="container">
        <div class="row align-items-center position-relative">
            <div class="col-lg-6">
                <div class="d-flex align-items-center">
                    <img class="img-fluid rounded-circle avatar avatar-xll" src="~/dist/images/avatar/01.jpg" alt="">
                    <div class="ms-4">
                        <h3 class="text-white mb-2"> Alice Williams</h3>
                        <div class="d-flex">
                            <span class="d-inline-block text-white">The first thing to remember about success.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- My Profile -->
<section class="space-ptb bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="sidebar">
                    <partial name="~/Views/Shared/_Partials/_Sidebar.cshtml" />
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <h4 class="mb-4">Organizer Profile</h4>
                <div class="sidebar mb-0">
                    <div class="widget">
                        <div class="widget-title">
                            <h6> <i class="fas fa-id-card"></i> Organizer: </h6>
                        </div>
                        <div class="widget-content">
                            <form class="row">
                                <div class="form-group mb-3 col-md-12">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" value="">
                                </div>
                                <div class="form-group mb-3 col-md-12">
                                    <label class="form-label">Description </label>
                                    <textarea class="form-control" rows="4"></textarea>
                                </div>
                                <div class="form-group mb-3 col-md-12">
                                    <label class="form-label">Website <small>(eg : "http://www.event.com")</small></label>
                                    <input type="text" class="form-control" value="">
                                </div>
                                <div class="form-group mb-3 col-md-12">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                        <label class="custom-control-label" for="customCheck1">Use this description on my event pages</label>
                                    </div>
                                </div>
                                <div class="form-group mb-3 col-md-12">
                                    <div class="mb-3 col-lg-12">
                                        <label class="form-label">Organizer Status </label>
                                        <div class="toggle-button-cover">
                                            <div class="button b2" id="button-status">
                                                <input type="checkbox" class="checkbox" />
                                                <div class="knobs">
                                                <span></span>
                                                </div>
                                                <div class="layer"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3 col-md-12">
                                    <label class="form-label">Page URL</label>
                                    <input type="text" class="form-control" value="">
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="widget mb-0">
                        <div class="widget-title">
                            <h6> <i class="fas fa-id-card"></i> Social Network: </h6>
                        </div>
                        <div class="widget-content">
                            <form class="row">
                                <div class="form-group mb-3 col-md-12">
                                    <label class="form-label">Facebook</label>
                                    <input type="text" class="form-control" value="">
                                </div>
                                <div class="form-group mb-3 col-md-12">
                                    <label class="form-label">Twitter</label>
                                    <input type="text" class="form-control" value="">
                                </div>
                                <div class="form-group mb-3 col-12">
                                    <a class="btn btn-secondary" href="#">Update</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
